@inject NavigationManager NavigationManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="@Assets["lib/bootstrap/dist/css/bootstrap.min.css"]" />
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["ProyectoFinalAp1.styles.css"]" />
    <link rel="icon" type="image/png" href="favicon.png" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    @if (IsAuthPage)
    {
        <HeadOutlet />
    }
    else
    {
        <HeadOutlet @rendermode="InteractiveServer" />
    }
</head>

<body>

    @if (IsAuthPage)
    {
        <Routes />
    }
    else
    {
        <Routes @rendermode="InteractiveServer" />
    }

    <script src="_framework/blazor.web.js"></script>
</body>

</html>

@code {
    private bool IsAuthPage =>
        NavigationManager.Uri.Contains("/Account/", StringComparison.OrdinalIgnoreCase) ||
        NavigationManager.Uri.Contains("/Identity/", StringComparison.OrdinalIgnoreCase);
}
